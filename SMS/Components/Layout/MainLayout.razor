@using SMS.Components.Layout
@inherits LayoutComponentBase

<AntDesign.Layout style="min-height: 100vh;">
    <!-- 统一的顶部栏 -->
    <AntDesign.Header style="background: linear-gradient(135deg, #4a90e2 0%, #357abd 50%, #2e6da4 100%); padding: 0 24px; display: flex; justify-content: space-between; align-items: center; box-shadow: 0 3px 10px rgba(0,0,0,0.15); position: fixed; top: 0; left: 0; right: 0; z-index: 1000; height: 60px;">
        <!-- 左侧区域：SMS品牌 + 搜索框 -->
        <div style="display: flex; align-items: center; gap: 24px;">
            <!-- SMS品牌 -->
            <div style="color: white; font-size: 1.4rem; font-weight: 700; letter-spacing: 2px; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
                SMS
            </div>
            
            <!-- 功能搜索框 -->
            <FunctionSearch />
        </div>
        
        <!-- 右侧用户菜单 -->
        <div>
            <UserMenu />
        </div>
    </AntDesign.Header>

    <!-- 下方内容区域 -->
    <AntDesign.Layout style="margin-top: 60px; background-color: #f5f5f5;">
        <AntDesign.Sider Theme="@AntDesign.SiderTheme.Light" style="background-color: #f5f5f5;" Width="120">
            <NavMenu />
        </AntDesign.Sider>

        <AntDesign.Content style="padding: 24px; background-color: #f5f5f5;">
            @Body
        </AntDesign.Content>
    </AntDesign.Layout>
</AntDesign.Layout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
