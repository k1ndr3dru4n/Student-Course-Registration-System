@namespace SMS.Components.Layout
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@implements IDisposable

@if (!string.IsNullOrEmpty(currentUser))
{
    <div style="display: flex; align-items: center; gap: 16px;">
        <!-- 实时时间显示 -->
        <AntDesign.Tag style="background: rgba(255, 255, 255, 0.1); border: none; color: white; border-radius: 15px; padding: 6px 12px;">
            @currentTime
        </AntDesign.Tag>
        
        <!-- 用户菜单 -->
    <AntDesign.Dropdown Trigger="@(new AntDesign.Trigger[] { AntDesign.Trigger.Click })" Placement="@AntDesign.Placement.BottomRight">
            <Overlay>
                <AntDesign.Menu>
                    <AntDesign.MenuItem Key="password" Icon="key" OnClick="async () => await DelayedNavigateToResetPassword()">
                        修改密码
                    </AntDesign.MenuItem>
                    <AntDesign.MenuDivider />
                    <AntDesign.MenuItem Key="logout" Icon="logout" OnClick="async () => await DelayedLogout()">
                        <span style="color: #ff4d4f;">退出登录</span>
                    </AntDesign.MenuItem>
                </AntDesign.Menu>
            </Overlay>
            <ChildContent>
                <AntDesign.Button Ghost="true" Icon="user" style="border-radius: 20px; color: white; border-color: white; cursor: pointer;">
                    @currentUser @if (!string.IsNullOrEmpty(currentUserRole)) { <span style="font-size: 12px; opacity: 0.8;">(@currentUserRole)</span> }
                </AntDesign.Button>
            </ChildContent>
        </AntDesign.Dropdown>
    </div>
}
else
{
    <a href="/login" style="text-decoration: none;">
        <AntDesign.Button Ghost="true" style="border-radius: 20px; color: white; border-color: white;">
            登录
        </AntDesign.Button>
    </a>
}

@code {
    private string currentUser = string.Empty;
    private string currentUserRole = string.Empty;
    private string currentTime = string.Empty;
    private System.Threading.Timer? timer;
    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentUser();
        await LoadCurrentUserRole();
        UpdateTime();
        isInitialized = true;
    }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            StartTimer();
        }
        return Task.CompletedTask;
    }

    protected override async Task OnParametersSetAsync()
    {
        // 确保用户信息和时间是最新的
        if (isInitialized)
        {
            await LoadCurrentUser();
            await LoadCurrentUserRole();
            UpdateTime();
        }
    }

    private void StartTimer()
    {
        timer = new System.Threading.Timer(async _ =>
        {
            UpdateTime();
            await InvokeAsync(StateHasChanged);
        }, null, TimeSpan.Zero, TimeSpan.FromSeconds(1));
    }

    private void UpdateTime()
    {
        currentTime = DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss");
    }

    private async Task LoadCurrentUser()
    {
        try
        {
            // 从浏览器存储获取用户名
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentUser") ?? string.Empty;
        }
        catch
        {
            currentUser = string.Empty;
        }
    }

    private async Task LoadCurrentUserRole()
    {
        try
        {
            // 从浏览器存储获取用户角色
            var roleId = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userRole") ?? string.Empty;
            currentUserRole = roleId switch
            {
                "0" => "学生",
                "1" => "老师",
                "2" => "管理员",
                _ => string.Empty
            };
        }
        catch
        {
            currentUserRole = string.Empty;
        }
    }

    private async Task DelayedLogout()
    {
        // 延迟关闭菜单，避免闪退
        await Task.Delay(200);
        await Logout();
    }

    private async Task DelayedNavigateToResetPassword()
    {
        await Task.Delay(200);
        NavigateToResetPassword();
    }

    private async Task Logout()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "currentUser");
            await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "userRole");
            await JSRuntime.InvokeVoidAsync("alert", "已成功退出登录");
            NavigationManager.NavigateTo("/login", forceLoad: false);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"退出登录失败: {ex.Message}");
        }
    }

    private void NavigateToResetPassword()
    {
        NavigationManager.NavigateTo("/forgot-password");
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
