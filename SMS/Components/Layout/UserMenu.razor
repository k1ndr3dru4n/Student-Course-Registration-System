@namespace SMS.Components.Layout
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@implements IDisposable

@if (!string.IsNullOrEmpty(currentUser))
{
    <div class="d-flex align-items-center gap-3">
        <!-- 实时时间显示 -->
        <div class="time-display" style="color: #ffffff; font-size: 14px; font-weight: 500; text-shadow: 0 1px 2px rgba(0,0,0,0.2); background: rgba(255, 255, 255, 0.1); border-radius: 15px; padding: 6px 12px; backdrop-filter: blur(5px);">
            @currentTime
        </div>
        
        <!-- 用户菜单 -->
        <div class="dropdown">
            <button class="btn dropdown-toggle fw-bold" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" 
                    style="background: rgba(255, 255, 255, 0.2); border: 2px solid rgba(255, 255, 255, 0.3); color: #ffffff; backdrop-filter: blur(10px); border-radius: 25px; padding: 8px 16px; text-shadow: 0 1px 2px rgba(0,0,0,0.2); transition: all 0.3s ease;"
                    onmouseover="this.style.background='rgba(255, 255, 255, 0.3)'; this.style.transform='translateY(-1px)'"
                    onmouseout="this.style.background='rgba(255, 255, 255, 0.2)'; this.style.transform='translateY(0)'">
                <i class="bi bi-person-circle me-1"></i> @currentUser
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="userDropdown" style="border: none; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
                <li><a class="dropdown-item" href="/forgot-password" style="border-radius: 8px; margin: 2px;"><i class="bi bi-key me-2"></i> 修改密码</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#" @onclick="Logout" style="border-radius: 8px; margin: 2px;"><i class="bi bi-box-arrow-right me-2"></i> 退出登录</a></li>
            </ul>
        </div>
    </div>
}
else
{
    <a href="/login" class="btn fw-bold" 
       style="background: rgba(255, 255, 255, 0.2); border: 2px solid rgba(255, 255, 255, 0.3); color: #ffffff; backdrop-filter: blur(10px); border-radius: 25px; padding: 8px 20px; text-shadow: 0 1px 2px rgba(0,0,0,0.2); text-decoration: none; transition: all 0.3s ease;"
       onmouseover="this.style.background='rgba(255, 255, 255, 0.3)'; this.style.transform='translateY(-1px)'"
       onmouseout="this.style.background='rgba(255, 255, 255, 0.2)'; this.style.transform='translateY(0)'">登录</a>
}

@code {
    private string currentUser = string.Empty;
    private string currentTime = string.Empty;
    private System.Threading.Timer? timer;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadCurrentUser();
            UpdateTime();
            StartTimer();
            StateHasChanged();
        }
    }

    private void StartTimer()
    {
        timer = new System.Threading.Timer(async _ =>
        {
            UpdateTime();
            await InvokeAsync(StateHasChanged);
        }, null, TimeSpan.Zero, TimeSpan.FromSeconds(1));
    }

    private void UpdateTime()
    {
        currentTime = DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss");
    }

    private async Task LoadCurrentUser()
    {
        try
        {
            // 从浏览器存储获取用户名
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentUser") ?? string.Empty;
        }
        catch
        {
            currentUser = string.Empty;
        }
    }

    private async Task Logout()
    {
        try
        {
            // 清除本地存储的用户信息
            await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "currentUser");
            
            // 显示退出提示
            await JSRuntime.InvokeVoidAsync("alert", "已成功退出登录");
            
            // 跳转到登录页面
            NavigationManager.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"退出登录失败: {ex.Message}");
        }
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
