@page "/students/delete"
@inject SMS.CimContext DB
@using SMS.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    @if (student is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">SID</dt>
            <dd class="col-sm-10">@student.SID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@student.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@student.Age</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Major</dt>
            <dd class="col-sm-10">@student.Major</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@student.Email</dd>
        </dl>
        <EditForm method="post" Model="student" OnValidSubmit="DeleteStudent" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(student is null)">Delete</button> |
            <a href="/students">Back to List</a>
        </EditForm>
    }
</div>

@code {
    Student? student;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        student = await DB.SMS_Students.FirstOrDefaultAsync(m => m.Id == Id);

        if (student is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteStudent()
    {
        DB.SMS_Students.Remove(student!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/students");
    }
}
