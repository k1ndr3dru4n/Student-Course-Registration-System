@page "/students/delete"
@inject SMS.CimContext DB
@using SMS.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <AntDesign.Divider />
    @if (student is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <AntDesign.Card Title="确认删除学生" style="margin-bottom: 16px;">
            <AntDesign.Alert Type="@AntDesign.AlertType.Warning" 
                           Message="您确定要删除以下学生信息吗？此操作无法撤销。" 
                           ShowIcon="true" 
                           style="margin-bottom: 16px;" />
            
            <AntDesign.Descriptions Bordered="true" Column="1">
                <AntDesign.DescriptionsItem Title="学号(SID)">@student.SID</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="姓名">@student.Name</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="年龄">@student.Age</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="专业">@student.Major</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="邮箱">@student.Email</AntDesign.DescriptionsItem>
            </AntDesign.Descriptions>
            
            <EditForm method="post" Model="student" OnValidSubmit="DeleteStudent" FormName="delete" Enhance>
                <div style="margin-top: 16px;">
                    <AntDesign.Button Type="@AntDesign.ButtonType.Primary" Danger="true" HtmlType="submit" Disabled="@(student is null)" Loading="@isDeleting">
                        @if (isDeleting)
                        {
                            <span>删除中...</span>
                        }
                        else
                        {
                            <span>删除</span>
                        }
                    </AntDesign.Button>
                    <AntDesign.Button style="margin-left: 8px;" @onclick="@(() => NavigationManager.NavigateTo("/students"))">取消</AntDesign.Button>
                </div>
            </EditForm>
        </AntDesign.Card>
    }
</div>

@code {
    [Inject]
    public IJSRuntime JSRuntime { get; set; } = default!;
    private string currentUser = string.Empty;
    private bool isDeleting = false;
    Student? student;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        student = await DB.SMS_Students.FirstOrDefaultAsync(m => m.Id == Id);

        if (student is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteStudent()
    {
        isDeleting = true;
        StateHasChanged();
        
        try
        {
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentUser") ?? string.Empty;
            if (!string.IsNullOrEmpty(currentUser))
            {
                student!.UpdateUser = currentUser;
            }
            DB.SMS_Students.Remove(student!);
            await DB.SaveChangesAsync();
            NavigationManager.NavigateTo("/students");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}
