@page "/students/details"
@inject SMS.CimContext DB
@using SMS.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    @if (student is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">SID</dt>
            <dd class="col-sm-10">@student.SID</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@student.Name</dd>
            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@student.Age</dd>
            <dt class="col-sm-2">Major</dt>
            <dd class="col-sm-10">@student.Major</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@student.Email</dd>
        </dl>
        <div>
            <a href="@($"/students/edit?id={student.Id}")">Edit</a> |
            <a href="@($"/students")">Back to List</a>
        </div>
    }
</div>

@code {
    Student? student;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        student = await DB.SMS_Students.FirstOrDefaultAsync(m => m.Id == Id);

        if (student is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
