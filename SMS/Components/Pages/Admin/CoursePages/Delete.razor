@page "/admin-courses/delete"
@inject SMS.CimContext DB
@using SMS.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>课程</h4>
    <AntDesign.Divider />
    @if (course is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <AntDesign.Card Title="确认删除课程" style="margin-bottom: 16px;">
            <AntDesign.Alert Type="@AntDesign.AlertType.Warning" 
                           Message="您确定要删除以下课程信息吗？此操作无法撤销。" 
                           ShowIcon="true" 
                           style="margin-bottom: 16px;" />
            
            <AntDesign.Descriptions Bordered="true" Column="1">
                <AntDesign.DescriptionsItem Title="课程编号(CID)">@course.CID</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="课程名称">@course.Name</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="学分">@course.Credits</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="课程描述">@course.Description</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="课程状态">@course.CourseStatus</AntDesign.DescriptionsItem>
            </AntDesign.Descriptions>
            
            <EditForm method="post" Model="course" OnValidSubmit="DeleteCourse" FormName="delete" Enhance>
                <div style="margin-top: 16px;">
                    <AntDesign.Button Type="@AntDesign.ButtonType.Primary" Danger="true" HtmlType="submit" Disabled="@(course is null)" Loading="@isDeleting">
                        @if (isDeleting)
                        {
                            <span>删除中...</span>
                        }
                        else
                        {
                            <span>删除</span>
                        }
                    </AntDesign.Button>
                    <AntDesign.Button style="margin-left: 8px;" OnClick="@(() => NavigationManager.NavigateTo("/admin-courses"))">取消</AntDesign.Button>
                </div>
            </EditForm>
        </AntDesign.Card>
    }
</div>

@code {
    [Inject]
    public IJSRuntime JSRuntime { get; set; } = default!;
    private string currentUser = string.Empty;
    private bool isDeleting = false;
    Course? course;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        course = await DB.SMS_Courses.FirstOrDefaultAsync(m => m.Id == Id);

        if (course is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteCourse()
    {
        isDeleting = true;
        StateHasChanged();
        
        try
        {
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentUser") ?? string.Empty;
            if (!string.IsNullOrEmpty(currentUser))
            {
                course!.UpdateUser = currentUser;
            }
            DB.SMS_Courses.Remove(course!);
            await DB.SaveChangesAsync();
            NavigationManager.NavigateTo("/admin-courses");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}
