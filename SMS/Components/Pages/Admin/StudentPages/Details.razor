@page "/admin-students/details"
@inject SMS.CimContext DB
@using SMS.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    @if (student is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <div style="background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); padding: 24px; margin-bottom: 24px;">
            <h3 style="margin-bottom: 16px;">学生详细信息</h3>
            <table style="width: 100%; border-collapse: collapse;">
                <tr><td style="font-weight: bold; width: 120px;">学号(SID)</td><td>@student.SID</td></tr>
                <tr><td style="font-weight: bold;">姓名</td><td>@student.Name</td></tr>
                <tr><td style="font-weight: bold;">年龄</td><td>@student.Age</td></tr>
                <tr><td style="font-weight: bold;">专业</td><td>@student.Major</td></tr>
                <tr><td style="font-weight: bold;">邮箱</td><td>@student.Email</td></tr>
            </table>
            <div style="margin-top: 24px;">
                <a href="/admin-students" class="ant-btn ant-btn-primary" style="text-decoration: none; color: white; padding: 6px 15px; border-radius: 6px; background: #1890ff; border: 1px solid #1890ff;">返回列表</a>
            </div>
        </div>
    }
</div>

@code {
    Student? student;

    [Parameter]
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        student = await DB.SMS_Students.FirstOrDefaultAsync(m => m.Id == Id);

        if (student is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
