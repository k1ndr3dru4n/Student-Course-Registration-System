@page "/admin-teachers/delete"
@inject SMS.CimContext DB
@using SMS.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer

<PageTitle>Delete</PageTitle>

@if (teacher is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <AntDesign.Card Title="确认删除教师" style="margin-bottom: 16px;">
            <AntDesign.Alert Type="@AntDesign.AlertType.Warning" 
                           Message="您确定要删除以下教师信息吗？此操作无法撤销。" 
                           ShowIcon="true" 
                           style="margin-bottom: 16px;" />
            
            <AntDesign.Descriptions Bordered="true" Column="1">
                <AntDesign.DescriptionsItem Title="教师号(TID)">@teacher.TID</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="姓名">@teacher.Name</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="年龄">@teacher.Age</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="专业">@teacher.Major</AntDesign.DescriptionsItem>
                <AntDesign.DescriptionsItem Title="邮箱">@teacher.Email</AntDesign.DescriptionsItem>
            </AntDesign.Descriptions>
            
            <EditForm method="post" Model="teacher" OnValidSubmit="DeleteTeacher" FormName="delete" Enhance>
                <div style="margin-top: 16px;">
                    <AntDesign.Button Type="@AntDesign.ButtonType.Primary" Danger="true" HtmlType="submit" Disabled="@(teacher is null)" Loading="@isDeleting">
                        @if (isDeleting)
                        {
                            <span>删除中...</span>
                        }
                        else
                        {
                            <span>删除</span>
                        }
                    </AntDesign.Button>
                    <AntDesign.Button style="margin-left: 8px;" OnClick="@(() => NavigationManager.NavigateTo("/admin-teachers"))">取消</AntDesign.Button>
                </div>
            </EditForm>
        </AntDesign.Card>
    }

@code {
    [Inject]
    public IJSRuntime JSRuntime { get; set; } = default!;
    private string currentUser = string.Empty;
    private bool isDeleting = false;
    Teacher? teacher;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        teacher = await DB.SMS_Teachers.FirstOrDefaultAsync(m => m.Id == Id);

        if (teacher is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteTeacher()
    {
        isDeleting = true;
        StateHasChanged();
        
        try
        {
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentUser") ?? string.Empty;
            if (!string.IsNullOrEmpty(currentUser))
            {
                teacher!.UpdateUser = currentUser;
            }
            DB.SMS_Teachers.Remove(teacher!);
            await DB.SaveChangesAsync();
            NavigationManager.NavigateTo("/admin-teachers");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
}
